generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @default(autoincrement()) @id
  username String @unique
  display_name String? @default("")
  no_hp String
  email String
  password String
}

model user_settings{
  id Int @default(autoincrement()) @id
  notifications Boolean
  smsEnabled Boolean
}

